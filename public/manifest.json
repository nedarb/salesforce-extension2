{
  "manifest_version": 3,
  "name": "Salesforce Explorer",
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-popover": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Run \"foo\" on the current page."
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/contentscript.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*.my.salesforce.com/*",
    "https://*.my.localhost.sfdcdev.salesforce.com/*",
    "https://*.lightning.localhost.sfdcdev.force.com/*"
  ],
  "permissions": [
    "activeTab"
  ],
  "optional_permissions": [
    "cookies"
  ]
}