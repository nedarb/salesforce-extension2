{
  "manifest_version": 3,
  "name": "Salesforce Explorer",
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*.my.salesforce.com/*",
    "https://*.my.localhost.sfdcdev.salesforce.com/*",
    "https://*.lightning.localhost.sfdcdev.force.com/*",
    "https://*.develop.test1.my.pc-rnd.salesforce.com/*",
    "https://*.my.pc-rnd.salesforce-setup.com",
    "https://*.lightning.pc-rnd.force.com"
  ],
  "permissions": [
    "activeTab"
  ],
  "optional_permissions": [
    "cookies"
  ]
}